<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:background">@color/background_color</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="textInputStyle">@style/TextInputStyle</item>
    </style>

    <style name="ButtonStyle">
        <item name="cornerRadius">12dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/button_stroke_color</item>
        <item name="backgroundTint">@color/button_background_color</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">23sp</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="rippleColor">@color/button_stroke_color</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textSize">23sp</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextInputStyle">
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

</resources>